<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@id/iv"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/daal" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_stock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:alpha="0.8"
                    android:visibility="gone"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:paddingVertical="5dp"
                        android:text="Out of stock"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="17dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_no"
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:layout_marginVertical="@dimen/padding_10"
                    android:layout_marginHorizontal="5dp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:alpha="0.5"
                        android:background="@color/colorPrimary">

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/img_cart"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="5dp"
                            android:padding="4dp"
                            android:src="@drawable/shopping_cart_icon" />

                        <RelativeLayout
                            android:id="@+id/rel_cart_no_items"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="17dp"
                            android:layout_marginBottom="-11dp"
                            android:background="@drawable/round_bg"
                            android:backgroundTint="@color/white">

                            <TextView
                                android:id="@+id/txt_cart_items"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="1"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                        </RelativeLayout>

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/red_circle_background"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_discount_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="10% off"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Moti Luxury Bath Soap -Gulab :\n150 gms"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rel_veg_nonveg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginHorizontal="@dimen/padding_10"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/iv_veg"
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:src="@drawable/veg_symbol"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/iv_nonveg"
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:src="@drawable/veg_symbol"
                            android:tint="@color/red"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_mrp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/rel_veg_nonveg"
                        android:gravity="right"
                        android:visibility="gone"
                        android:text=""
                        android:textColor="@color/grey"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_og_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:visibility="gone"
                    android:text="Save \u20B910.00"
                    android:textColor="@color/red"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rel_qty"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/padding_10"
                        android:background="@drawable/box_border_thin_bg_layout"
                        android:paddingLeft="@dimen/padding_10">

                        <TextView
                            android:id="@+id/txt_unit"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_toLeftOf="@+id/card_unit"
                            android:gravity="center"
                            android:text="150 gm"
                            android:lines="2"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="@color/colorBlack"
                            android:textSize="10sp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_unit"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/padding_10"
                            app:cardBackgroundColor="@color/colorPrimary"
                            app:cardCornerRadius="5dp">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:src="@drawable/down_arrow" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rel_cart1"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"

                        android:layout_gravity="right">

                    <RelativeLayout
                        android:id="@+id/rel_cartmain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/gray_button_layout1"
                        android:backgroundTint="@color/colorPrimary">


                        <Button
                            android:id="@+id/btn_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_below="@+id/txt_price"
                            android:background="@android:color/transparent"
                            android:paddingHorizontal="10dp"
                            android:text="Add To Cart"
                            android:textColor="@color/white"
                            android:textSize="11dp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <RelativeLayout
                            android:id="@+id/rel_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="5dp"
                            android:visibility="gone">

                            <RelativeLayout
                                android:id="@+id/rel_minus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@drawable/gray_background_layout">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:padding="2dp"
                                    android:src="@drawable/ic_remove_black_24dp"
                                    android:tint="@color/black" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rel_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/rel_minus">

                                <TextView
                                    android:id="@+id/txt_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginHorizontal="14dp"
                                    android:text="1"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:visibility="visible" />

                                <ProgressBar
                                    android:id="@+id/progressBar"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginHorizontal="5dp"
                                    android:theme="@style/AppTheme.WhiteAccent"
                                    android:visibility="gone" />
                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/rel_plus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/rel_count"
                                android:background="@drawable/gray_background_layout">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:padding="2dp"
                                    android:src="@drawable/ic_add_black_24dp"
                                    android:tint="@color/black" />
                            </RelativeLayout>

                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rel_subs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        android:background="@drawable/gray_button_layout1"
                        android:backgroundTint="@color/colorPrimary">


                        <Button
                            android:id="@+id/btn_subscribe"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_below="@+id/txt_price"
                            android:background="@android:color/transparent"
                            android:paddingHorizontal="10dp"
                            android:text="SUBSCRIBE"
                            android:textColor="@color/white"
                            android:textSize="11dp"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGraylight1"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_10"
                android:nestedScrollingEnabled="true"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/img_product"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:padding="20dp" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/lnr_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="7dp"
                        android:layout_marginVertical="7dp"
                        android:fontFamily="sans-serif-thin"
                        android:lines="2"
                        android:maxLines="2"
                        android:text="The Sharro Ring The Sharro Ring The Sharro Ring "
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:background="@color/white"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_discount_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="\u20B98,999"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_mrp_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text=""
                            android:textColor="@color/grey"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_discount1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:paddingHorizontal="5dp"
                        android:text="5% OFF"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rel_qty"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginHorizontal="15dp"
                            android:background="@drawable/box_border_thin_bg_grey_layout"
                            android:paddingLeft="@dimen/padding_10">

                            <TextView
                                android:id="@+id/txt_unit"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_toLeftOf="@+id/iv"
                                android:gravity="center"
                                android:text="150 gm"
android:lines="2"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:textColor="@color/colorBlack"
                                android:textSize="10sp" />


                                <ImageView
                                    android:id="@+id/iv"
                                    android:layout_width="12dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="7dp"
                                    android:src="@drawable/down_arrow"
                                    android:visibility="gone"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginLeft="@dimen/padding_10"
                                    android:tint="@color/grey"/>
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/rel_cart1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginVertical="@dimen/padding_10">

                            <RelativeLayout
                                android:id="@+id/rel_cartmain"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/gray_button_layout1"
                                android:backgroundTint="@color/colorPrimary">


                                <Button
                                    android:id="@+id/btn_cart"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_below="@+id/txt_price"
                                    android:background="@android:color/transparent"
                                    android:paddingHorizontal="10dp"
                                    android:text="Add To Cart"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="11dp"
                                    android:textStyle="bold"
                                    android:visibility="visible" />

                                <RelativeLayout
                                    android:id="@+id/rel_cart"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:visibility="gone"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginHorizontal="5dp">

                                    <RelativeLayout
                                        android:id="@+id/rel_minus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:layout_centerVertical="true"
                                        android:background="@drawable/gray_background_layout">

                                        <ImageView
                                            android:layout_width="22dp"
                                            android:layout_height="22dp"
                                            android:padding="2dp"
                                            android:src="@drawable/ic_remove_black_24dp"
                                            android:tint="@color/black" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/rel_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/rel_minus">

                                        <TextView
                                            android:id="@+id/txt_count"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginHorizontal="25dp"
                                            android:text="1"
                                            android:textColor="@color/white"
                                            android:textSize="18sp"
                                            android:textStyle="bold" />

                                        <ProgressBar
                                            android:id="@+id/progressBar"
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:visibility="gone"
                                            android:layout_centerInParent="true"
                                            android:layout_marginHorizontal="15dp"
                                            android:theme="@style/AppTheme.WhiteAccent" />
                                    </RelativeLayout>


                                    <RelativeLayout
                                        android:id="@+id/rel_plus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/rel_count"
                                        android:background="@drawable/gray_background_layout">

                                        <ImageView
                                            android:layout_width="22dp"
                                            android:layout_height="22dp"
                                            android:padding="2dp"
                                            android:src="@drawable/ic_add_black_24dp"
                                            android:tint="@color/black" />
                                    </RelativeLayout>

                                </RelativeLayout>
                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/rel_subs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:visibility="gone"
                                android:background="@drawable/gray_button_layout1"
                                android:backgroundTint="@color/colorPrimary">


                                <Button
                                    android:id="@+id/btn_subscribe"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_below="@+id/txt_price"
                                    android:background="@android:color/transparent"
                                    android:paddingHorizontal="10dp"
                                    android:text="SUBSCRIBE"
                                    android:textColor="@color/white"
                                    android:textSize="11dp"
                                    android:textStyle="bold"
                                    android:visibility="visible" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_making_charges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="8dp"
                        android:background="@color/white"

                        android:gravity="center_horizontal"
                        android:paddingHorizontal="5dp"
                        android:text="5% OFF"
                        android:singleLine="true"
                        android:visibility="gone"
                        android:ellipsize="end"
                        android:textColor="@color/colorAccent"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rel_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="5dp"
                android:visibility="gone"
                android:layout_marginVertical="8dp">

                <com.like.LikeButton
                    android:id="@+id/btn_like"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="10dp"
                    app:icon_type="heart" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rel_click"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rel_like" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:layout_margin="4dp"
            android:background="@drawable/box_border_thin_bg_semi_square_layout">
            <TextView
                android:id="@+id/txt_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save ₹50"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
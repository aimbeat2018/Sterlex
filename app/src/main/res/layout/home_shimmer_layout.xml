<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lnr_thum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_10"
            android:layout_below="@+id/thumbnail3"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@drawable/shimmer_back" />
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@drawable/shimmer_back" />
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@drawable/shimmer_back" />

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@drawable/shimmer_back" />
        </LinearLayout>
        <View
            android:id="@+id/thumbnail1"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="@dimen/padding_10"
            android:background="@drawable/shimmer_back" />
        <View
            android:id="@+id/thumbnail11"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="@dimen/padding_10"
            android:background="@drawable/shimmer_back" />
        <View
            android:id="@+id/thumbnail111"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="@dimen/padding_10"
            android:background="@drawable/shimmer_back" />

        <View
            android:id="@+id/thumbnail1111"
            android:layout_width="@dimen/placeholderImage"
            android:layout_height="@dimen/placeholderImage"
            android:layout_below="@+id/thumbnail2"
            android:layout_marginTop="@dimen/padding_10"
            
            android:background="@color/background"
            android:visibility="gone" />

        <View
            android:id="@+id/thumbnail3"
            android:layout_width="150dp"
            android:layout_height="@dimen/placeholderTextHeight"
            android:layout_below="@+id/thumbnail2"
            android:layout_marginTop="15dp"

            android:visibility="gone"
            android:layout_marginBottom="5dp"
            android:background="@color/background" />

        <LinearLayout
            android:id="@+id/lnr_thum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@+id/thumbnail3"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@drawable/shimmer_back" />

            <View
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_weight="1"
                android:background="@drawable/shimmer_back" />
        </LinearLayout>

        <View
            android:id="@+id/thumbnail4"
            android:layout_width="150dp"
            android:visibility="gone"
            android:layout_height="@dimen/placeholderTextHeight"
            android:layout_below="@+id/lnr_thum"
            android:layout_marginTop="15dp"
            
            android:layout_marginBottom="5dp"
            android:background="@color/background" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbnail4"
            android:visibility="gone"
            android:layout_toRightOf="@id/thumbnail"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@drawable/shimmer_back" />

            <View
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="@dimen/padding_10"
                
                android:layout_weight="1"
                android:background="@drawable/shimmer_back" />
        </LinearLayout>

        <View
            android:id="@+id/thumbnail2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/thumbnail1"
            android:layout_marginTop="@dimen/padding_10"
            
            android:background="@drawable/shimmer_back" />

    </LinearLayout>
</RelativeLayout>